<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_round_dialog"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="168dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:text="催付提示"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ff000000"
            android:textSize="13sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etRightContent"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:padding="10dp"
                android:layout_marginLeft="9dp"
                android:hint="请输入"
                android:background="@drawable/corner_dialog_edit_text"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:textColor="#ff757575"
                android:textSize="13sp"
                />
        </LinearLayout>


        <View
            android:layout_marginTop="10dp"
            style="@style/DivideLineHorizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tvLeft"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="取消"
                android:textStyle="bold"
                android:textColor="#ff757575"
                android:textSize="13sp"
                />
            <View
                style="@style/DivideLineVertical"
                />

            <TextView
                android:id="@+id/tvRight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="确定"
                android:textStyle="bold"
                android:textColor="#3870EA"
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
