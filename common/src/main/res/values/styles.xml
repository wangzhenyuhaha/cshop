<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--支持圆角的View-->
    <declare-styleable name="IView">
        <attr name="ivBgColor" format="color" />
        <attr name="ivBgSelectedColor" format="color" />
        <attr name="ivBorderWidth" format="dimension" />
        <attr name="ivBorderColor" format="color" />
        <attr name="ivRadius" format="dimension" />
    </declare-styleable>

    <style name="MyToolBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--  菜单文字颜色 -->
        <item name="android:actionMenuTextColor">#fff</item>
        <item name="android:colorAccent">#03DAC5</item>
    </style>

    <style name="LoadingDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- 通用横向分割线 -->
    <style name="DivideLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divide_line</item>
    </style>

    <!-- 短粗横线 -->
    <style name="DivideLineHorizontalDuan">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#ffbbbbbb</item>
    </style>

    <style name="DivideLineHorizontalOfC1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#C1C1C1</item>
    </style>

    <!-- 通用竖直分割线 -->
    <style name="DivideLineVertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divide_line</item>
    </style>

    <style name="DivideRowHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/common_bg</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>