<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    tools:ignore="HardcodedText,ContentDescription">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.james.common.view.ILinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:ivBgColor="@color/white"
                app:ivRadius="5dp">

                <TextView
                    style="@style/goods_spce_item_left_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="店铺类型"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />

                <View style="@style/DivideLineHorizontal" />

                <RelativeLayout
                    android:id="@+id/shopInfoSelf"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/dimen_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="个体户"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/shopInfoSelfImageView"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/selector_login_service" />

                </RelativeLayout>

                <View style="@style/DivideLineHorizontal" />

                <RelativeLayout
                    android:id="@+id/shopInfoCompany"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/dimen_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="企业"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/shopInfoCompanyImageView"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/selector_login_service" />

                </RelativeLayout>


            </com.james.common.view.ILinearLayout>

            <com.james.common.view.ILinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:ivBgColor="@color/white"
                app:ivRadius="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="基础资料"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />

                <View style="@style/DivideLineHorizontal" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/thrcertflag"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/dimen_8">

                    <TextView
                        android:id="@+id/flagTV"
                        style="@style/goods_spce_item_left_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="三证合一"
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/thrcertflag"
                        app:layout_constraintStart_toStartOf="@+id/thrcertflag"
                        app:layout_constraintTop_toTopOf="@+id/thrcertflag" />

                    <TextView
                        android:id="@+id/thrcertflagYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:drawableEnd="@drawable/selector_login_service"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="是   "
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/thrcertflag"
                        app:layout_constraintEnd_toStartOf="@+id/thrcertflagNO"
                        app:layout_constraintTop_toTopOf="@+id/thrcertflag" />

                    <TextView
                        android:id="@+id/thrcertflagNO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/selector_login_service"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="否   "
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/thrcertflag"
                        app:layout_constraintEnd_toEndOf="@+id/thrcertflag"
                        app:layout_constraintTop_toTopOf="@+id/thrcertflag" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View style="@style/DivideLineHorizontal" />

                <RelativeLayout
                    android:id="@+id/license"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        style="@style/goods_spce_item_left_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="营业执照照片"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/licenseTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="16dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="请上传营业执照"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="11dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/me_arrow_right" />
                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    style="@style/DivideLineHorizontal" />

                <RelativeLayout
                    android:id="@+id/taxes"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        style="@style/goods_spce_item_left_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="税务登记证照片"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/taxesTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="16dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="请上传税务登记证"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="11dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/me_arrow_right" />
                </RelativeLayout>

                <View
                    android:id="@+id/view2"
                    style="@style/DivideLineHorizontal" />

                <RelativeLayout
                    android:id="@+id/organ"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        style="@style/goods_spce_item_left_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="组织机构代码证照片"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/organTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="16dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="请上传组织机构代码"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="11dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/me_arrow_right" />
                </RelativeLayout>


                <View style="@style/DivideLineHorizontal" />

                <RelativeLayout
                    android:id="@+id/shopPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        style="@style/goods_spce_item_left_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="店铺照片"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvShopPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="16dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="未上传"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="11dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/me_arrow_right" />
                </RelativeLayout>

                <View style="@style/DivideLineHorizontal" />

                <RelativeLayout
                    android:id="@+id/IDCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        style="@style/goods_spce_item_left_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="法人身份证照片"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/IDCardTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="16dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="未上传"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="11dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/me_arrow_right" />
                </RelativeLayout>

                <View style="@style/DivideLineHorizontal" />

                <RelativeLayout
                    android:id="@+id/foodAllow"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="食品经营许可证照片"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/foodAllowTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="16dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="选传"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="11dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/me_arrow_right" />
                </RelativeLayout>

                <View style="@style/DivideLineHorizontal" />

                <RelativeLayout
                    android:id="@+id/otherPIC"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="其他营业资质照片"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/otherPICTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="16dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="选传"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="11dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/me_arrow_right" />
                </RelativeLayout>
            </com.james.common.view.ILinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <com.james.common.view.ITextView
        android:id="@+id/nextTextView"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="确认保存"
        android:textColor="#fff"
        android:textSize="13sp"
        app:ivBgColor="#3870EA"
        app:ivRadius="19dp" />

</RelativeLayout>