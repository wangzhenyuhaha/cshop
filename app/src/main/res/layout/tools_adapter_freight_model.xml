<?xml version="1.0" encoding="utf-8"?>
<com.james.common.view.ILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:background="#EDEDED"
    android:orientation="vertical"
    android:paddingTop="15dp"
    app:ivBgColor="#fff"
    app:ivRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_15">

        <TextView
            android:id="@+id/tv_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="模板名称"
            android:text="模板名称" />

        <TextView
            android:id="@+id/tv_model_fee_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999999"
            android:layout_alignParentRight="true"
            tools:text="按公里计算"
            android:text="按公里计算" />

    </RelativeLayout>

    <View style="@style/DivideLineHorizontal" />

    <RelativeLayout
        android:id="@+id/ll_order_bottom"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.james.common.view.ITextView
            android:id="@+id/tv_model_type"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            tools:text="同城"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:text="同城"
            android:layout_centerInParent="true"
            android:textColor="#ff3870ea"
            android:textSize="12sp"
            app:ivBgColor="#fff"
            app:ivBorderColor="#ff3870ea"
            app:ivBorderWidth="1px"
            app:ivRadius="5dp" />

        <TextView
            android:id="@+id/tv_model_delete"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/goods_group_manager_delete"
            android:drawablePadding="@dimen/dimen_5"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"/>

        <com.james.common.view.ITextView
            android:id="@+id/tv_model_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/dimen_20"
            android:gravity="center"
            android:text="编辑"
            android:drawableLeft="@mipmap/goods_group_manager_edit"
            android:drawablePadding="@dimen/dimen_5"
            android:layout_centerInParent="true"
            android:textColor="@color/color_3870EA"
            android:textSize="12sp"
            android:layout_toLeftOf="@id/tv_model_delete"
            app:ivRadius="15dp" />

    </RelativeLayout>

</com.james.common.view.ILinearLayout>