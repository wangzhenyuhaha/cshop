<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShopAddressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="圆通蛟龙投资发展集团（上海市青浦区）"
                android:textColor="#ff000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvShopAddressDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                tools:text="100m内 | 青浦区兴民大道"
                android:textColor="#ff6f6f6f"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivShopAddressSelected"
            android:layout_width="14dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/main_address_selected" />
    </RelativeLayout>

    <View style="@style/DivideLineHorizontal" />
</LinearLayout>