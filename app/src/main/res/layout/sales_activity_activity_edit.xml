<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EDEDED"
    android:orientation="vertical">

    <!--  模块一  -->
    <com.james.common.view.ILinearLayout
        style="@style/goods_group_edit_container"
        android:paddingHorizontal="@dimen/dimen_10"
        app:ivBgColor="@color/color_ffffff">

        <!--   菜单名称     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_7"
                android:src="@mipmap/common_must_input" />

            <TextView
                style="@style/goods_group_edit_left"
                android:layout_width="110dp"
                android:text="活动/优惠名称" />

            <EditText
                android:id="@+id/menuNameEdt"
                style="@style/goods_group_edit_right"
                android:hint="请输入活动/优惠名称" />
        </LinearLayout>

        <View style="@style/common_divider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_7"
                android:src="@mipmap/common_must_input" />

            <TextView
                style="@style/goods_group_edit_left"
                android:maxLines="1"
                android:text="活动/优惠名称" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right|center"
                android:paddingTop="@dimen/dimen_15">

                <com.james.common.view.IRelativeLayout
                    android:id="@+id/firstMenuC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:paddingVertical="@dimen/dimen_4"
                    app:ivBgColor="@color/white"
                    app:ivBorderColor="@color/color_999999"
                    app:ivBorderWidth="@dimen/dimen_1"
                    app:ivRadius="@dimen/dimen_5"
                    app:layout_constraintLeft_toRightOf="@id/goodsPriceTv"
                    app:layout_constraintTop_toBottomOf="@+id/goodsOwnerTv">

                    <TextView
                        android:id="@+id/firstMenuTv"
                        android:drawableRight="@mipmap/ic_date"
                        android:layout_width="86dp"
                        android:layout_height="@dimen/dimen_17"
                        android:text="2020-08-08"
                        android:maxLines="1"
                        android:drawablePadding="@dimen/dimen_5"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_11" />

                </com.james.common.view.IRelativeLayout>

                <TextView
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="~"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.james.common.view.IRelativeLayout
                    android:id="@+id/secondMenuC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:paddingVertical="@dimen/dimen_4"
                    app:ivBgColor="@color/white"
                    app:ivBorderColor="@color/color_999999"
                    app:ivBorderWidth="@dimen/dimen_1"
                    app:ivRadius="@dimen/dimen_5"
                    app:layout_constraintLeft_toRightOf="@id/goodsPriceTv"
                    app:layout_constraintTop_toBottomOf="@+id/goodsOwnerTv">

                    <TextView
                        android:id="@+id/secondMenuTv"
                        android:drawableRight="@mipmap/ic_date"
                        android:layout_width="86dp"
                        android:layout_height="@dimen/dimen_17"
                        android:text="2020-08-08"
                        android:maxLines="1"
                        android:drawablePadding="@dimen/dimen_5"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_11" />

                </com.james.common.view.IRelativeLayout>

            </LinearLayout>

        </LinearLayout>


        <View style="@style/common_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_7"
                    android:src="@mipmap/common_must_input" />

                <TextView
                    style="@style/goods_group_edit_left"
                    android:layout_height="40dp"
                    android:layout_width="110dp"
                    android:text="活动详情" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activityRv"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View style="@style/common_divider" />

        <!--   分组名称     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_7"
                android:src="@mipmap/common_must_input" />

            <TextView
                style="@style/goods_group_edit_left"
                android:text="商品管理" />

            <TextView
                android:drawablePadding="@dimen/dimen_10"
                android:drawableRight="@mipmap/common_arrow_right"
                android:id="@+id/activityGoodsPickTv"
                style="@style/goods_group_edit_right"
                android:hint="请选择参与活动的商品" />

        </LinearLayout>
    </com.james.common.view.ILinearLayout>


</LinearLayout>
