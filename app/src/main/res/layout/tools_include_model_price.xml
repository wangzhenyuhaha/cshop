<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/tools_sub_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/tools_sub_item_star"
            android:text="*" />

        <TextView
            style="@style/tools_sub_item_left"
            android:text="起送价" />

        <EditText
            android:id="@+id/et_model_km_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="end"
            android:hint="请输入起送价，必填"
            android:inputType="numberDecimal"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen_15"
            android:paddingEnd="@dimen/dimen_5"
            android:paddingStart="0dp"
            android:paddingBottom="@dimen/dimen_15"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_CACACA"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="@dimen/dimen_15"
            android:paddingBottom="@dimen/dimen_15"
            android:text="元"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <View style="@style/DivideLineHorizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/tools_sub_item_star"
                android:text="*" />

            <TextView
                android:id="@+id/tv_model_price_hint"
                style="@style/tools_sub_item_left"
                android:text="配送费" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_model_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_model_price_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/ll_model_time_date">

                <EditText
                    android:id="@+id/et_model_price_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/dimen_10"
                    android:gravity="center"
                    android:hint="请输入"
                    android:inputType="numberDecimal"
                    android:orientation="horizontal"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_CACACA"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km内约" />

                <EditText
                    android:id="@+id/et_model_price_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/dimen_10"
                    android:gravity="center"
                    android:hint="请输入"
                    android:inputType="numberDecimal"
                    android:orientation="horizontal"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_CACACA"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元收取," />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/ll_model_time_date">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每超出" />

                <EditText
                    android:id="@+id/et_model_price_km_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/dimen_10"
                    android:gravity="center"
                    android:hint="请输入"
                    android:inputType="numberDecimal"
                    android:orientation="horizontal"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_CACACA"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km费用增加" />

                <EditText
                    android:id="@+id/et_model_price_minute_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/dimen_10"
                    android:gravity="center"
                    android:hint="请输入"
                    android:inputType="numberDecimal"
                    android:orientation="horizontal"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_CACACA"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>