<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.james.common.view.IRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_14"
        android:layout_marginTop="@dimen/dimen_14"
        android:paddingHorizontal="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_11"
        android:paddingBottom="@dimen/dimen_18"
        app:ivBgColor="@color/color_ffffff"
        app:ivRadius="@dimen/dimen_5">

        <ImageView
            android:id="@+id/groupIconIv"
            android:layout_width="@dimen/dimen_29"
            android:layout_height="@dimen/dimen_29" />

        <TextView
            android:id="@+id/groupNameTv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_29"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_toEndOf="@+id/groupIconIv"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="150dp"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_13"
            tools:text="测试1测试1测试1测试1测试1测试1测试1" />

        <TextView
            android:id="@+id/groupDescTv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_29"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_toEndOf="@+id/groupNameTv"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="70dp"
            android:singleLine="true"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dimen_12"
            tools:text="测试1测试1" />

        <TextView
            android:id="@+id/groupOrderTv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_29"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dimen_10"
            android:drawableEnd="@mipmap/goods_group_manager_right_arrow"
            android:drawablePadding="@dimen/dimen_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/dimen_13"
            tools:text="排序：1" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_half"
            android:layout_below="@+id/groupIconIv"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_18"
            android:background="@color/color_E6E6E6" />

        <TextView
            android:id="@+id/showTagTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:background="@drawable/selector_goods_group_manager_item_bg"
            android:paddingHorizontal="@dimen/dimen_5"
            android:text="显示"
            android:textColor="@drawable/selector_goods_group_manager_item" />

        <TextView
            android:id="@+id/groupDeleteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_alignParentRight="true"
            android:drawableStart="@mipmap/goods_group_manager_delete"
            android:drawablePadding="@dimen/dimen_5"
            android:text="删除"
            android:textColor="@color/color_FF0202"
            android:textSize="@dimen/dimen_13" />


        <TextView
            android:id="@+id/groupEditTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginRight="@dimen/dimen_38"
            android:layout_toLeftOf="@+id/groupDeleteTv"
            android:drawableStart="@mipmap/goods_group_manager_edit"
            android:drawablePadding="@dimen/dimen_5"
            android:text="编辑"
            android:textColor="@color/color_3870EA"
            android:textSize="@dimen/dimen_13" />

    </com.james.common.view.IRelativeLayout>

    <View
        android:id="@+id/marginView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_20"
        android:visibility="gone" />
</LinearLayout>