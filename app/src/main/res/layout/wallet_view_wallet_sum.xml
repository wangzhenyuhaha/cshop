<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/common_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_30"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_wallet_info_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/color_333333"
            android:text="余额（元）"/>

        <TextView
            android:id="@+id/tv_wallet_info_value"
            android:layout_marginBottom="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3870EA"
            android:gravity="center"
            android:textSize="24sp"
            android:text="0元"/>

        <com.james.common.view.ITextView
            android:id="@+id/tv_wallet_info_option_type"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="提现"
            android:textColor="#ff3870ea"
            android:textSize="14sp"
            app:ivBgColor="#fff"
            app:ivRadius="15dp"
            android:gravity="center"
            app:ivBorderWidth="1px"
            app:ivBorderColor="#ff3870ea"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:background="#d9d9d9"
            style="@style/DivideLineVertical"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#757575"
            android:id="@+id/tv_wallet_info_detail_type"
            android:text="钱包明细"/>

        <View
            android:background="#d9d9d9"
            style="@style/DivideLineVertical"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15" />

    </LinearLayout>

    <com.james.common.view.EmptyLayout
        android:id="@+id/elEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>