<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titleLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuExpandIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:padding="@dimen/dimen_15"
            android:src="@mipmap/tools_expand" />

        <TextView
            android:id="@+id/menuTitleTv"
            android:layout_width="wrap_content"
            android:text="fdsfadf"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:paddingBottom="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_15" />

        <TextView
            android:id="@+id/menuCountTv"
            android:paddingLeft="@dimen/dimen_5"
            tools:text="(1)"
            android:layout_weight="1"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:textColor="@color/color_999999"
            android:layout_height="wrap_content"/>


        <CheckBox
            android:id="@+id/menuCheckCb"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_29"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dimen_10"
            android:button="@drawable/selector_goods_spce_checkbox"
            android:drawablePadding="@dimen/dimen_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/dimen_13"
            android:visibility="gone"
            tools:visibility="visible"
            android:paddingRight="@dimen/dimen_15"/>

        <ImageView
            android:padding="@dimen/dimen_15"
            android:gravity="center"
            android:src="@mipmap/goods_spec_blue_plus"
            android:id="@+id/menuAddGoodsIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View style="@style/DivideLineHorizontal" />

</LinearLayout>