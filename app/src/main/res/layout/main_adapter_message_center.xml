<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/common_bg"
    android:layout_height="wrap_content">

    <com.james.common.view.ILinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:ivBgColor="@color/white"
        app:ivRadius="12dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/main_message_center_voice"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="9dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMessageCenterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="订单指派通知"
                android:textColor="#ff000000"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvMessageCenterContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="您配送的订单19021800001，客户已经完成评
价了，请及时查看~"
                android:textColor="#ff757575"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvMessageCenterTime"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="2016-07-13 16:50"
                android:textColor="#ffd9d9d9"
                android:textSize="12sp"
                />
        </LinearLayout>
    </com.james.common.view.ILinearLayout>

</RelativeLayout>