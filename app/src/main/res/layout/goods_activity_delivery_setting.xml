<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.lingmiao.shop.widget.ToolBarView
            android:id="@+id/toolbarView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_toolbar_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_14"
            android:paddingEnd="@dimen/dimen_14">

            <CheckBox
                android:id="@+id/globalDeliveryChk"
                style="@style/goods_delivery_title"
                android:text="物流发货" />

        </LinearLayout>

        <LinearLayout style="@style/goods_delivery_row_container">

            <CheckBox
                android:id="@+id/globalCostChk"
                style="@style/goods_delivery_row_left"
                android:text="统一运费" />

            <EditText
                android:id="@+id/globalCostEdt"
                style="@style/goods_delivery_edit_right"
                android:hint="请输入运费" />
        </LinearLayout>

        <View
            style="@style/common_divider"
            android:layout_marginStart="41dp" />

        <LinearLayout style="@style/goods_delivery_row_container">

            <CheckBox
                android:id="@+id/globalTemplateChk"
                style="@style/goods_delivery_row_left"
                android:text="运费模板" />

            <TextView
                android:id="@+id/globalTemplateTv"
                style="@style/goods_delivery_right_arrow"
                android:hint="请选择" />
        </LinearLayout>

        <View
            style="@style/common_divider"
            android:layout_marginStart="41dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_14"
            android:paddingEnd="@dimen/dimen_14">

            <CheckBox
                android:id="@+id/localDeliveryChk"
                style="@style/goods_delivery_title"
                android:text="同城配送" />
        </LinearLayout>


        <LinearLayout style="@style/goods_delivery_row_container">

            <CheckBox
                android:id="@+id/localCostChk"
                style="@style/goods_delivery_row_left"
                android:text="统一运费" />

            <EditText
                android:id="@+id/localCostEdt"
                style="@style/goods_delivery_edit_right"
                android:hint="请输入运费" />
        </LinearLayout>

        <View
            style="@style/common_divider"
            android:layout_marginStart="41dp" />

        <LinearLayout style="@style/goods_delivery_row_container">

            <CheckBox
                android:id="@+id/localTemplateChk"
                style="@style/goods_delivery_row_left"
                android:text="运费模板" />

            <TextView
                android:id="@+id/localTemplateTv"
                style="@style/goods_delivery_right_arrow"
                android:hint="请选择" />
        </LinearLayout>

        <View
            style="@style/common_divider"
            android:layout_marginStart="41dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_14"
            android:paddingEnd="@dimen/dimen_14">

            <CheckBox
                android:id="@+id/selfDeliveryChk"
                style="@style/goods_delivery_title"
                android:text="到店自提" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shape_goods_divider" />

        <TextView
            android:id="@+id/submitTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_38"
            android:layout_margin="@dimen/dimen_10"
            android:background="@drawable/shape_goods_pop_btn"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_14" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
