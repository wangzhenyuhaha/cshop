<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/quantityNameTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        tools:text="规格值1，规格值2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal">

        <LinearLayout style="@style/goods_spec_sub_container">

            <TextView
                style="@style/goods_spce_item_left_mark"
                android:text="商品价格" />

            <EditText
                android:id="@+id/priceEdt"
                style="@style/goods_spec_item_right_edt"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@xml/setbar_bg_grey"
                android:hint=" 售价，请输入"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/dimen_5"
                android:textColor="@color/primary" />
        </LinearLayout>

        <LinearLayout style="@style/goods_spec_sub_container">

            <TextView
                style="@style/goods_spce_item_left_mark"
                android:text="商品库存" />

            <EditText
                android:id="@+id/quantityEdt"
                style="@style/goods_spec_item_right_edt"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@xml/setbar_bg_grey"
                android:hint=" 库存，请输入"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="0dp"
                android:textColor="@color/primary" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal">

        <LinearLayout style="@style/goods_spec_sub_container">

            <TextView
                style="@style/goods_spce_item_left_mark"
                android:text="活动价格" />

            <EditText
                android:id="@+id/event_priceEdt"
                style="@style/goods_spec_item_right_edt"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@xml/setbar_bg_grey"
                android:hint=" 售价，请输入"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/dimen_5"
                android:textColor="@color/primary" />
        </LinearLayout>

        <LinearLayout style="@style/goods_spec_sub_container">

            <TextView
                style="@style/goods_spce_item_left_mark"
                android:text="活动库存" />

            <EditText
                android:id="@+id/event_quantityEdt"
                style="@style/goods_spec_item_right_edt"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@xml/setbar_bg_grey"
                android:hint=" 库存，请输入"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="0dp"
                android:textColor="@color/primary" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_divider" />


</LinearLayout>