<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.james.common.view.IRelativeLayout
            android:id="@+id/rlShopQualificationUpload"
            android:layout_width="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            app:ivBgColor="#EDEDED"
            app:ivRadius="5dp"
            android:layout_height="168dp">

            <ImageView
                android:id="@+id/ivShopQualificationDefault"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/me_select_image_default"
                />

            <ImageView
                android:id="@+id/ivShopUpload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />
        </com.james.common.view.IRelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>