<?xml version="1.0" encoding="utf-8"?>
<com.james.common.view.ILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:background="#EDEDED"
    android:orientation="vertical"
    android:paddingTop="15dp"
    app:ivBgColor="#fff"
    app:ivRadius="5dp">

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:textColor="#ff000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_account_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_bank_no"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_666666"
        android:textSize="12sp" />

    <View style="@style/DivideLineHorizontal" />

    <RelativeLayout
        android:id="@+id/ll_order_bottom"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.james.common.view.ITextView
            android:id="@+id/tv_bankcard_type"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="个人账户"
            android:layout_centerInParent="true"
            android:textColor="#ff3870ea"
            android:textSize="12sp"
            app:ivBgColor="#fff"
            app:ivBorderColor="#ff3870ea"
            app:ivBorderWidth="1px"
            app:ivRadius="5dp" />

        <com.james.common.view.ITextView
            android:id="@+id/tv_bankcard_un_bind"
            android:layout_width="72dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="解绑"
            android:textColor="#ff3870ea"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            app:ivBgColor="#fff"
            app:ivBorderColor="#ff3870ea"
            app:ivBorderWidth="1px"
            app:ivRadius="15dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>

        <com.james.common.view.ITextView
            android:visibility="gone"
            android:id="@+id/tv_bankcard_edit"
            android:layout_width="72dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="编辑"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="12sp"
            app:ivBgColor="#ff3870ea"
            app:ivBorderColor="#ff3870ea"
            app:ivBorderWidth="1px"
            android:layout_toLeftOf="@id/tv_bankcard_un_bind"
            app:ivRadius="15dp" />

    </RelativeLayout>

</com.james.common.view.ILinearLayout>