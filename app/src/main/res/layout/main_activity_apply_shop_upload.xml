<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.james.common.view.IRelativeLayout
        android:id="@+id/rlShopUpload"
        android:layout_width="match_parent"
        app:ivBgColor="@color/white"
        app:ivRadius="12dp"
        android:layout_margin="15dp"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivShopUploadAction"
            android:layout_width="96dp"
            android:layout_height="84dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/main_shop_image_upload"/>

        <ImageView
            android:id="@+id/ivShopUpload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </com.james.common.view.IRelativeLayout>


    <com.james.common.view.ITextView
        android:id="@+id/tvUploadSubmit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_15"
        android:gravity="center"
        android:text="чбошод"
        android:textColor="#fff"
        android:textSize="13sp"
        app:ivBgColor="#3870EA"
        app:ivRadius="19dp" />

</LinearLayout>