<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dimen_15"
    android:paddingEnd="@dimen/dimen_15"
    android:orientation="vertical"
    android:background="@color/common_bg"
    tools:ignore="HardcodedText,ContentDescription">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:paddingTop="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_8"
        android:text="公司资质"
        android:textColor="#ff000000"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="19dp"
        android:background="@color/gray_bg_click"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/dimen_5"
                android:id="@+id/textViewCompany1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="增值电信业务经营许可证"
                android:textColor="#ff000000"
                android:layout_gravity="start"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_gravity="start"
                android:id="@+id/textViewCompany2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="(由正规持牌支付机构提供T+1交易服务)"
                android:textColor="#3870EA"
                android:textSize="@dimen/sp_14"  />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/apply_shop_hint" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="请准备好如下资料"
        android:textColor="#ff000000"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@color/gray_bg_click"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/main_shop_hint_1"
            android:drawablePadding="@dimen/dimen_5"
            android:gravity="center"
            android:text="身份证正面"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:drawableTop="@mipmap/main_shop_hint_2"
            android:drawablePadding="@dimen/dimen_5"
            android:gravity="center"
            android:text="身份证反面"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@color/gray_bg_click"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/main_shop_hint_3"
            android:drawablePadding="@dimen/dimen_5"
            android:gravity="center"
            android:text="手持身份证照片"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:drawableTop="@mipmap/main_shop_hint_4"
            android:drawablePadding="@dimen/dimen_5"
            android:gravity="center"
            android:text="公司营业执照"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivApplyShopHintNext"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/selector_login_service" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="我已阅读并同意"
            android:textColor="#ff666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvApplyShopHintService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="《C店商家服务条款》"
            android:textColor="#3870EA"
            android:textSize="11sp" />
    </LinearLayout>


    <com.james.common.view.ITextView
        android:id="@+id/tvApplyShopHintNext"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="准备好了，申请开店"
        android:textColor="#fff"
        android:textSize="13sp"
        app:ivBgColor="#3870EA"
        app:ivRadius="19dp" />

</LinearLayout>