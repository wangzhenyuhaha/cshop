<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_province"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_province_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:padding="@dimen/dimen_15"
            android:src="@mipmap/tools_expand" />

        <TextView
            android:id="@+id/tv_province_name"
            android:layout_width="0dp"
            android:text="fdsfadf"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:paddingBottom="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_15" />

        <RadioButton
            android:id="@+id/iv_province_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:button="@drawable/selector_goods_delivery_child_checkbox"
            android:padding="@dimen/dimen_15" />

    </LinearLayout>

    <View style="@style/DivideLineHorizontal" />

</LinearLayout>