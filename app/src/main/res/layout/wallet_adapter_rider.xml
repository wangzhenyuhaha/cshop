<?xml version="1.0" encoding="utf-8"?>
<com.james.common.view.ILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_15"
    android:layout_marginTop="@dimen/dimen_10"
    android:layout_marginRight="@dimen/dimen_15"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10"
    app:ivBgColor="@color/white"
    app:ivRadius="5dp"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_wallet_deposit_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="支付保证现金"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="@+id/container"
            app:layout_constraintTop_toTopOf="@+id/container" />

        <TextView
            android:id="@+id/tv_wallet_deposit_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_wallet_deposit_item_type"
            android:layout_marginTop="@dimen/dimen_5"
            android:maxLines="1"
            android:text="2019-09-09 22:00"
            android:textColor="@color/color_999999"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/container"
            app:layout_constraintTop_toBottomOf="@+id/tv_wallet_deposit_item_type" />

        <TextView
            android:id="@+id/tv_wallet_deposit_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:text="$2222"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/container"
            app:layout_constraintEnd_toEndOf="@+id/container"
            app:layout_constraintTop_toTopOf="@+id/container" />


        <TextView
            android:id="@+id/tv_wallet_deposit_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_20"
            android:maxLines="1"
            android:text="$2222"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_wallet_deposit_item_type"
            app:layout_constraintStart_toEndOf="@+id/tv_wallet_deposit_item_type"
            app:layout_constraintTop_toTopOf="@+id/tv_wallet_deposit_item_type" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.james.common.view.ILinearLayout>