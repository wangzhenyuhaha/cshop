<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    tools:ignore="HardcodedText,ContentDescription">


    <com.james.common.view.ILinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15"
        android:orientation="vertical"
        app:ivBgColor="@color/white"
        app:ivRadius="5dp">

        <LinearLayout
            android:id="@+id/ll_wallet_account_type"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingVertical="@dimen/dimen_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_account_hint_type"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_wallet_account_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="end"
                android:hint="请选择"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_CACACA"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/goods_group_manager_right_arrow" />

        </LinearLayout>

        <View
            style="@style/DivideLineHorizontal"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10" />

        <LinearLayout
            android:id="@+id/ll_wallet_account_bank_deposit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingVertical="@dimen/dimen_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_account_hint_bank_deposit"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_wallet_account_bank_deposit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:hint="请选择"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_CACACA"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/goods_group_manager_right_arrow" />
        </LinearLayout>

        <View
            style="@style/DivideLineHorizontal"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10" />

        <LinearLayout
            android:id="@+id/ll_wallet_account_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingVertical="@dimen/dimen_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_account_hint_name"
                android:textColor="#333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_wallet_account_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="@dimen/dimen_10"
                android:gravity="end"
                android:hint="请输入，必填"
                android:singleLine="true"
                android:layout_marginEnd="40dp"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_CACACA"
                android:textSize="@dimen/sp_13"
                android:inputType="none" />


        </LinearLayout>

        <View
            style="@style/DivideLineHorizontal"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10" />

        <LinearLayout
            android:id="@+id/ll_wallet_account_bank_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingVertical="@dimen/dimen_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_account_hint_bank_no"
                android:textColor="#333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_wallet_account_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/dimen_10"
                android:gravity="end"
                android:hint="请输入，必填"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_CACACA"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="40dp"
                android:id="@+id/find_wallet_account_no"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_camera_alt" />

        </LinearLayout>

    </com.james.common.view.ILinearLayout>

    <com.james.common.view.ITextView
        android:id="@+id/tv_bankcard_submit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="确定提交"
        android:textColor="@color/white"
        app:ivBgColor="@color/color_3870EA"
        app:ivRadius="19dp" />

</RelativeLayout>