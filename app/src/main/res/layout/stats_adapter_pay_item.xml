<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/payTypeItemTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_10"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="订单" />

    <TextView
        android:id="@+id/payTypeItemPercentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_10"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/payTypeItemTv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="80%" />

    <TextView
        android:id="@+id/payTypeItemCountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_10"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12"
        android:paddingLeft="@dimen/dimen_20"
        app:layout_constraintLeft_toRightOf="@id/payTypeItemPercentTv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="(共计12单)" />

    <TextView
        android:id="@+id/payTypeItemAmountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_15"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="800" />

    <SeekBar
        android:id="@+id/payValueSb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:maxHeight="2dp"
        android:paddingBottom="@dimen/dp_10"
        android:progress="30"
        android:progressDrawable="@drawable/seek_progress_default"
        android:thumb="@drawable/seek_bar_thumb"
        app:layout_constraintTop_toBottomOf="@id/payTypeItemTv" />

</androidx.constraintlayout.widget.ConstraintLayout>