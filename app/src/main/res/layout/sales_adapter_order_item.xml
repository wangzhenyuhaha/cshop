<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/orderGoodsIv"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_margin="@dimen/dimen_15"
        tools:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/orderGoodsNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="@dimen/dimen_15"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/orderGoodsIv"
        app:layout_constraintTop_toTopOf="@id/orderGoodsIv"
        app:layout_constraintBottom_toBottomOf="@id/orderGoodsIv"
        tools:text="苹果" />

    <TextView
        android:id="@+id/orderGoodsQuantityTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        android:paddingHorizontal="@dimen/dimen_15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/orderGoodsIv"
        app:layout_constraintBottom_toBottomOf="@id/orderGoodsIv"
        tools:text="x1" />

    <TextView
        android:id="@+id/orderGoodsSkuTv"
        android:text="dfsafsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_11"
        android:textStyle="bold"
        android:textColor="@color/color_999999"
        app:layout_constraintRight_toLeftOf="@id/orderGoodsQuantityTv"
        app:layout_constraintTop_toTopOf="@id/orderGoodsIv"
        app:layout_constraintBottom_toBottomOf="@id/orderGoodsIv"
        tools:text="宽/高" />

</androidx.constraintlayout.widget.ConstraintLayout>