<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/shape_goods_pop_quantity"
    android:color="@color/color_ffffff"
    android:orientation="horizontal"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/shop_pop_q_r_code_save"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@color/zxing_transparent"
        android:drawableTop="@drawable/ic_baseline_cloud_download"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:padding="@dimen/dimen_15"
        android:text="保存"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/shop_pop_q_r_code_share"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@color/zxing_transparent"
        android:drawableTop="@drawable/ic_baseline_qr_code"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:padding="@dimen/dimen_15"
        android:text="微信"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />
    <TextView
        android:id="@+id/shop_pop_q_r_code_watch_photo"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@color/zxing_transparent"
        android:drawableTop="@drawable/ic_baseline_insert_photo"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:padding="@dimen/dimen_15"
        android:text="查看图片"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />
</LinearLayout>