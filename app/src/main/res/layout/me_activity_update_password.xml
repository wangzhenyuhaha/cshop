<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">

    <com.james.common.view.ILinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="vertical"
        app:ivBgColor="@color/white"
        app:ivRadius="5dp">


        <LinearLayout
            android:id="@+id/llOldPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="原密码"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etOldPassword"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textColor="#333"
                android:textColorHint="#CACACA"
                android:textSize="13sp" />

        </LinearLayout>
        <View style="@style/DivideLineHorizontal"/>

        <LinearLayout
            android:id="@+id/llNewPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="新密码"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textColor="#333"
                android:textColorHint="#CACACA"
                android:textSize="13sp" />

        </LinearLayout>
        <View style="@style/DivideLineHorizontal"/>

        <LinearLayout
            android:id="@+id/llConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="确认新密码"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etConfirmNewPassword"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请确认新密码"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textColor="#333"
                android:textColorHint="#CACACA"
                android:textSize="13sp" />

        </LinearLayout>
    </com.james.common.view.ILinearLayout>

    <com.james.common.view.ITextView
        android:id="@+id/tvUpdatePasswordSubmit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="14dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="13sp"
        app:ivBgColor="#3870EA"
        app:ivRadius="19dp" />
</RelativeLayout>