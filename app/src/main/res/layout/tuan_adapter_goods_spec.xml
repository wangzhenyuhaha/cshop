<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tuan_goods_spec_sku"
        style="@style/tuan_goods_item_1"
        android:text="SKU规格" />

    <TextView
        android:id="@+id/tv_tuan_goods_spec_sale_price"
        style="@style/tuan_goods_item_1"
        android:text="店铺售价" />

    <TextView
        android:id="@+id/tv_tuan_goods_spec_price"
        style="@style/tuan_goods_item_1"
        android:text="结算价" />

    <TextView
        android:id="@+id/tv_tuan_goods_spec_quantity"
        style="@style/tuan_goods_item_1"
        android:text="总库存" />

    <TextView
        android:id="@+id/tv_tuan_goods_spec_count"
        style="@style/tuan_goods_item_1"
        android:text="参团数" />

    <RelativeLayout style="@style/tuan_goods_item_1">

        <ImageView
            android:id="@+id/tv_tuan_goods_spec_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/goods_spec_delete" />
    </RelativeLayout>

</LinearLayout>
