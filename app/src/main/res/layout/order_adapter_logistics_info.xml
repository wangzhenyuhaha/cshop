<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="14dp">

        <View
            android:id="@+id/viShipDivideTop"
            style="@style/DivideLineVertical"
            android:layout_height="10dp"
            />

        <ImageView
            android:id="@+id/ivShipStatusSelected"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/logistics_info_selected" />
        <ImageView
            android:id="@+id/ivShipStatusUnselected"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/corner_logistics_info_unselected" />
        <View
            android:id="@+id/viShipDivideBottom"
            style="@style/DivideLineVertical"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="14dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvShipInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="已到达-上海青浦新区公司 18512345678"
            android:autoLink="phone"
            android:textColorLink="#399ED2"
            android:textColor="#ffc6c6c6"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvShipTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvShipInfo"
            android:layout_marginTop="4dp"
            tools:text="2019-03-12    16:41:19"
            android:textColor="#ffc6c6c6"
            android:textSize="9sp" />

        <View
            style="@style/DivideLineHorizontal"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/tvShipTime"
            />
    </LinearLayout>

</LinearLayout>