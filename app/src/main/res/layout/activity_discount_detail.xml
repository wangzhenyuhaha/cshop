<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <include layout="@layout/include_toolbar" />

    <include layout="@layout/include_view" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.james.common.view.ILinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                app:ivBgColor="@color/white"
                app:ivRadius="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableEnd="@mipmap/common_must_input"
                        android:text="优惠券名称"
                        android:textColor="@color/color_666666"                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toTopOf="@+id/container" />

                    <TextView
                        android:id="@+id/nameInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_30"
                        android:minWidth="100dp"
                        android:textSize="16sp"
                        android:textColor="@color/color_666666"
                        android:background="@xml/setbar_bg_grey"
                        app:layout_constraintStart_toEndOf="@+id/name"
                        app:layout_constraintTop_toTopOf="@+id/name"
                        tools:text="这里输入的是优惠券名称" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableEnd="@mipmap/common_must_input"
                        android:text="使用时间"
                        android:textColor="@color/color_666666"                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toBottomOf="@+id/name" />

                    <RadioGroup
                        app:layout_constraintStart_toStartOf="@+id/nameInput"
                        app:layout_constraintTop_toTopOf="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/time"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/cb_model_shop"
                            style="@style/tools_sub_item_radio_box"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/color_666666"
                            android:padding="@dimen/dimen_15"
                            android:text="商家配送" />

                        <RadioButton
                            android:id="@+id/cb_model_rider"
                            style="@style/tools_sub_item_radio_box"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/color_666666"
                            android:padding="@dimen/dimen_15"
                            android:text="骑手配送" />
                    </RadioGroup>





<!--                    <View-->
<!--                        android:id="@+id/divider1"-->
<!--                        style="@style/DivideLineHorizontal" />-->

<!--                    <View-->
<!--                        android:id="@+id/divider2"-->
<!--                        style="@style/DivideLineHorizontal" />-->

<!--                    <View-->
<!--                        android:id="@+id/divider3"-->
<!--                        style="@style/DivideLineHorizontal" />-->


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.james.common.view.ILinearLayout>


        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/include_empty" />

    </FrameLayout>

</LinearLayout>
