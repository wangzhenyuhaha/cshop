<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <include layout="@layout/include_toolbar" />

    <include layout="@layout/include_view" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dimen_60"
            android:layout_height="match_parent">

            <com.james.common.view.ILinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                app:ivRadius="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="@color/common_ffffff">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.125"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.25"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.375"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.5"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.625"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.75"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.875"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="1"
                        app:layout_constraintStart_toStartOf="parent" />

                    <View
                        style="@style/DivideLineHorizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline1"
                        app:layout_constraintEnd_toEndOf="@+id/container"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toTopOf="@+id/guideline1" />

                    <View
                        style="@style/DivideLineHorizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline2"
                        app:layout_constraintEnd_toEndOf="@+id/container"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toTopOf="@+id/guideline2" />

                    <View
                        style="@style/DivideLineHorizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline3"
                        app:layout_constraintEnd_toEndOf="@+id/container"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toTopOf="@+id/guideline3" />

                    <View
                        style="@style/DivideLineHorizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline4"
                        app:layout_constraintEnd_toEndOf="@+id/container"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toTopOf="@+id/guideline4" />

                    <View
                        style="@style/DivideLineHorizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline5"
                        app:layout_constraintEnd_toEndOf="@+id/container"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toTopOf="@+id/guideline5" />

                    <View
                        style="@style/DivideLineHorizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline6"
                        app:layout_constraintEnd_toEndOf="@+id/container"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toTopOf="@+id/guideline6" />

                    <View
                        style="@style/DivideLineHorizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline7"
                        app:layout_constraintEnd_toEndOf="@+id/container"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toTopOf="@+id/guideline7" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:drawableEnd="@mipmap/common_must_input"
                        android:text="优惠券名称"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toTopOf="@+id/guideline1"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toTopOf="@+id/container" />

                    <TextView
                        android:id="@+id/nameInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_35"
                        android:background="@xml/setbar_bg_grey"
                        android:minWidth="100dp"
                        android:padding="@dimen/dimen_5"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toBottomOf="@+id/name"
                        app:layout_constraintStart_toEndOf="@+id/name"
                        app:layout_constraintTop_toTopOf="@+id/name"
                        tools:text="这里输入的是优惠券名称" />

                    <TextView
                        android:id="@+id/couponTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableEnd="@mipmap/common_must_input"
                        android:text="优惠券领取时间"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toTopOf="@+id/guideline2"
                        app:layout_constraintStart_toStartOf="@+id/name"
                        app:layout_constraintTop_toBottomOf="@+id/guideline1" />

                    <LinearLayout
                        android:id="@+id/couponTimeDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/couponTime"
                        app:layout_constraintStart_toStartOf="@+id/nameInput"
                        app:layout_constraintTop_toTopOf="@+id/couponTime">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_20"
                                android:text="开始："
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/couponTimeStart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@mipmap/ic_date"
                                android:drawablePadding="@dimen/dimen_5"
                                android:text="请选择"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_20"
                                android:text="结束："
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/couponTimeEnd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@mipmap/ic_date"
                                android:drawablePadding="@dimen/dimen_5"
                                android:text="请选择"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="15dp"
                        android:drawableEnd="@mipmap/common_must_input"
                        android:text="使用时间"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toTopOf="@+id/guideline3"
                        app:layout_constraintStart_toStartOf="@+id/name"
                        app:layout_constraintTop_toBottomOf="@+id/guideline2" />

                    <RadioGroup
                        android:id="@+id/timeType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/time"
                        app:layout_constraintStart_toStartOf="@+id/nameInput"
                        app:layout_constraintTop_toTopOf="@+id/time">

                        <RadioButton
                            android:id="@+id/timeType1"
                            style="@style/tools_sub_item_radio_box"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dimen_15"
                            android:text="固定时间"
                            android:textColor="@color/color_666666" />

                        <RadioButton
                            android:id="@+id/timeType2"
                            style="@style/tools_sub_item_radio_box"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dimen_15"
                            android:text="领取后生效"
                            android:textColor="@color/color_666666" />

                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/useTimeDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline4"
                        app:layout_constraintStart_toStartOf="@+id/nameInput"
                        app:layout_constraintTop_toTopOf="@+id/guideline3"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="领取优惠券后"
                            android:textColor="@color/color_666666"
                            app:layout_constraintBottom_toBottomOf="@+id/stock"
                            app:layout_constraintStart_toStartOf="@+id/nameInput"
                            app:layout_constraintTop_toTopOf="@+id/stock" />

                        <TextView
                            android:id="@+id/useTimeDayNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:background="@xml/setbar_bg_grey"
                            android:gravity="center"
                            android:minWidth="@dimen/dimen_50"
                            android:textColor="@color/color_666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:text="天有效"
                            android:textColor="@color/color_666666" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/useTimeDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline4"
                        app:layout_constraintStart_toStartOf="@+id/nameInput"
                        app:layout_constraintTop_toTopOf="@+id/guideline3"
                        tools:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_20"
                                android:text="开始："
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/useTimeStart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@mipmap/ic_date"
                                android:drawablePadding="@dimen/dimen_5"
                                android:text="请选择"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_20"
                                android:text="结束："
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/useTimeEnd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@mipmap/ic_date"
                                android:drawablePadding="@dimen/dimen_5"
                                android:text="请选择"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableEnd="@mipmap/common_must_input"
                        android:text="库存"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toTopOf="@+id/guideline5"
                        app:layout_constraintStart_toStartOf="@+id/name"
                        app:layout_constraintTop_toBottomOf="@id/guideline4" />

                    <TextView
                        android:id="@+id/stockNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@xml/setbar_bg_grey_13"
                        android:minWidth="100dp"
                        android:textColor="@color/color_666666"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@+id/stock"
                        app:layout_constraintStart_toStartOf="@+id/nameInput"
                        app:layout_constraintTop_toTopOf="@+id/stock"
                        tools:text="这里输入库存数目" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@xml/setbar_bg_grey_24_all"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_5"
                        android:text="张"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toBottomOf="@+id/stockNumber"
                        app:layout_constraintStart_toEndOf="@+id/stockNumber"
                        app:layout_constraintTop_toTopOf="@+id/stockNumber" />

                    <TextView
                        android:id="@+id/ruler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableEnd="@mipmap/common_must_input"
                        android:text="优惠规则"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toTopOf="@+id/guideline6"
                        app:layout_constraintStart_toStartOf="@+id/name"
                        app:layout_constraintTop_toBottomOf="@id/guideline5" />

                    <LinearLayout
                        android:id="@+id/rulerNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/ruler"
                        app:layout_constraintStart_toStartOf="@+id/nameInput"
                        app:layout_constraintTop_toTopOf="@+id/ruler">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="满"
                            android:textColor="@color/color_666666"
                            app:layout_constraintBottom_toBottomOf="@+id/stock"
                            app:layout_constraintStart_toStartOf="@+id/nameInput"
                            app:layout_constraintTop_toTopOf="@+id/stock" />

                        <TextView
                            android:id="@+id/rulerNumberMan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:background="@xml/setbar_bg_grey"
                            android:gravity="center"
                            android:minWidth="@dimen/dimen_50"
                            android:textColor="@color/color_666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:text="减"
                            android:textColor="@color/color_666666" />

                        <TextView
                            android:id="@+id/rulerNumberJian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:gravity="center"
                            android:background="@xml/setbar_bg_grey"
                            android:minWidth="@dimen/dimen_50"
                            android:textColor="@color/color_666666" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableEnd="@mipmap/common_must_input"
                        android:text="适用商品"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toTopOf="@+id/guideline8"
                        app:layout_constraintStart_toStartOf="@+id/name"
                        app:layout_constraintTop_toBottomOf="@id/guideline7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前为【所有商品】都可参与活动"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toBottomOf="@+id/goods"
                        app:layout_constraintStart_toStartOf="@+id/nameInput"
                        app:layout_constraintTop_toTopOf="@+id/goods" />

                    <TextView
                        android:id="@+id/personalMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableEnd="@mipmap/common_must_input"
                        android:text="每人限领"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toTopOf="@+id/guideline7"
                        app:layout_constraintStart_toStartOf="@+id/name"
                        app:layout_constraintTop_toBottomOf="@+id/guideline6" />

                    <TextView
                        android:id="@+id/personalMoreNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@xml/setbar_bg_grey_13"
                        android:minWidth="100dp"
                        android:textColor="@color/color_666666"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@+id/personalMore"
                        app:layout_constraintStart_toStartOf="@+id/nameInput"
                        app:layout_constraintTop_toTopOf="@+id/personalMore"
                        tools:text="这里输入库存数目" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@xml/setbar_bg_grey_24_all"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_5"
                        android:text="张"
                        android:textColor="@color/color_666666"
                        app:layout_constraintBottom_toBottomOf="@+id/personalMore"
                        app:layout_constraintStart_toEndOf="@+id/personalMoreNumber"
                        app:layout_constraintTop_toTopOf="@+id/personalMore" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.james.common.view.ILinearLayout>

        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/include_empty" />

        <com.james.common.view.ITextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/common_ffffff"
            android:textSize="13sp"
            app:ivBgColor="#207AE1"
            app:ivRadius="18dp" />

    </FrameLayout>

</LinearLayout>
