<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_10"
    tools:ignore="HardcodedText">


    <TextView
        android:id="@+id/salesNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxWidth="150dp"
        android:paddingHorizontal="@dimen/dimen_15"
        android:paddingVertical="@dimen/dimen_10"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="测试1测试1测试1测试1测试1测试1测试1" />

    <TextView
        android:id="@+id/salesGoodsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dimen_10"
        android:drawableEnd="@mipmap/common_arrow_right"
        android:drawablePadding="@dimen/dimen_15"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dimen_15"
        android:paddingVertical="@dimen/dimen_10"
        android:singleLine="true"
        android:text="活动商品"
        android:textColor="@color/color_000000"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        style="@style/common_divider"
        android:layout_below="@+id/salesNameTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salesNameTv" />

    <com.lingmiao.shop.business.sales.view.SalesActivityRvLayout
        android:id="@+id/salesActivityC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

    </com.lingmiao.shop.business.sales.view.SalesActivityRvLayout>

    <View
        android:id="@+id/vCLine"
        style="@style/common_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salesActivityC" />

    <TextView
        android:id="@+id/salesStatusTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="@dimen/dimen_5"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="@dimen/dimen_15"
        android:singleLine="true"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vCLine"
        tools:text="进行中" />

    <LinearLayout
        android:id="@+id/salesOptionL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vCLine">


        <com.james.common.view.ITextView
            android:id="@+id/tvSalesEdit"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="@dimen/dimen_2"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:ivBgColor="@color/red"
            app:ivRadius="18dp" />

        <com.james.common.view.ITextView
            android:id="@+id/tvSalesView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="@dimen/dimen_2"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:text="查看"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:ivBgColor="@color/color_0EA60"
            app:ivRadius="18dp" />

        <com.james.common.view.ITextView
            android:id="@+id/tvSalesEnd"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="@dimen/dimen_2"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:text="结束"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:ivBgColor="@color/color_F68812"
            app:ivRadius="18dp" />


        <com.james.common.view.ITextView
            android:id="@+id/tvSalesDelete"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="@dimen/dimen_2"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:ivBgColor="@color/color_999999"
            app:ivRadius="18dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>