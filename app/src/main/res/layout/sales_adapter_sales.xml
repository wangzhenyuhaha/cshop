<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_10">


    <TextView
        android:id="@+id/salesNameTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_29"
        android:layout_marginStart="@dimen/dimen_10"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxWidth="150dp"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="测试1测试1测试1测试1测试1测试1测试1" />


    <TextView
        android:id="@+id/salesStatusTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_29"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dimen_10"
        android:drawablePadding="@dimen/dimen_5"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dimen_15"
        android:singleLine="true"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/dimen_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="进行中" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_half"
        android:layout_below="@+id/salesNameTv"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_18"
        android:background="@color/color_E6E6E6"
        app:layout_constraintTop_toBottomOf="@id/salesNameTv" />

    <com.lingmiao.shop.business.sales.view.SalesActivityRvLayout
        android:id="@+id/salesActivityC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_toLeftOf="@id/salesEditTv"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

    </com.lingmiao.shop.business.sales.view.SalesActivityRvLayout>

    <TextView
        android:id="@+id/salesEditTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:drawableStart="@mipmap/goods_group_manager_edit"
        android:drawablePadding="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_15"
        android:text="编辑"
        android:textColor="@color/color_3870EA"
        android:textSize="@dimen/dimen_13"
        app:layout_constraintBottom_toBottomOf="@id/salesActivityC"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>