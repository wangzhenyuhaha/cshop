<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <include layout="@layout/include_toolbar" />

    <include layout="@layout/include_view" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/firstMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.james.common.view.ILinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    app:ivBgColor="@color/white"
                    app:ivRadius="5dp">

                    <View style="@style/DivideLineHorizontal" />

                    <LinearLayout
                        android:id="@+id/rlShopManageName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:text="店铺名称"
                            android:textColor="#ff333333"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvShopManageName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableEnd="@mipmap/me_arrow_right"
                            android:drawablePadding="@dimen/dimen_10"
                            android:ellipsize="end"
                            android:gravity="center|end"
                            android:singleLine="true"
                            android:textColor="#ff999999"
                            android:textSize="12sp"
                            tools:text="贵宾公子饰品旗舰店" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rlShopManageNumber"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:text="店铺编号"
                            android:textColor="#ff333333"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvShopManageNumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|end"
                            android:textColor="#ff999999"
                            android:textSize="12sp"
                            tools:text="8018101011" />

                    </LinearLayout>

                    <View style="@style/DivideLineHorizontal" />

                    <LinearLayout
                        android:id="@+id/rlShopManageType"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:text="店铺类型"
                            android:textColor="#ff333333"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvShopManageType"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|end"
                            android:textColor="#ff999999"
                            android:textSize="12sp"
                            tools:text="企业店" />

                    </LinearLayout>

                    <View style="@style/DivideLineHorizontal" />

                    <LinearLayout
                        android:id="@+id/rlShopManageCategory"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:text="主营类目"
                            android:textColor="#ff333333"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvShopManageCategory"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center|end"
                            android:singleLine="true"
                            android:textColor="#ff999999"
                            android:textSize="12sp"
                            tools:text="水果生鲜/安心素材/肉禽蛋品" />

                    </LinearLayout>

                    <View style="@style/DivideLineHorizontal" />

                    <LinearLayout
                        android:id="@+id/rlShopManageQualification"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:text="店铺资质"
                            android:textColor="#ff333333"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvShopManageQualification"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableEnd="@mipmap/me_arrow_right"
                            android:drawablePadding="@dimen/dimen_10"
                            android:gravity="center|end"
                            android:text="点击查看"
                            android:textColor="#ff999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View style="@style/DivideLineHorizontal" />

                    <LinearLayout
                        android:id="@+id/rlShopManageAddress"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:text="店铺地址"
                            android:textColor="#ff333333"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvShopManageAddress"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dimen_10"
                            android:gravity="center|end"
                            android:textColor="#ff999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                </com.james.common.view.ILinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/include_empty" />

    </FrameLayout>

</LinearLayout>